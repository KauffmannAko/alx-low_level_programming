#include "main.h"
/**
 * _islower - Check lower case
 * @c: arg of type int
 * Description: check  for lowercase
 * Return: 1 if @ is lowercase and 0 otherwise.
 */
int _islower(int c)
{
	char c1, c2;
	int state = 0;
	    c1 = 'a';
	    c2 = 'A';
	    while (c1 <= 'z' && C1 <= 'Z')
	{
		if (c1 == c || c2 == c)
		{
			state = 1;
		}
		c1++;
		c2++;
	}
	return (state);
}
